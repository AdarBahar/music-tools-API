# Music Tools API Configuration
# Copy this file to .env and modify as needed

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Docker Port Mapping (if you need to change external port)
# Uncomment and modify if port 8000 is already in use:
# DOCKER_API_PORT=8001

# File Storage Configuration
MAX_FILE_SIZE_MB=100
CLEANUP_INTERVAL_HOURS=24
FILE_RETENTION_HOURS=48

# YouTube Download Settings
DEFAULT_AUDIO_QUALITY=0
DEFAULT_AUDIO_FORMAT=mp3

# Demucs Settings
DEFAULT_DEMUCS_MODEL=htdemucs
DEFAULT_STEM_FORMAT=mp3

# Background Tasks (Redis)
# For Docker deployment (uses internal Redis container)
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# For local development (if you have Redis running locally)
# REDIS_URL=redis://localhost:6379/0
# CELERY_BROKER_URL=redis://localhost:6379/0
# CELERY_RESULT_BACKEND=redis://localhost:6379/0

# For local development with Docker Redis on different port
# REDIS_URL=redis://localhost:6380/0
# CELERY_BROKER_URL=redis://localhost:6380/0
# CELERY_RESULT_BACKEND=redis://localhost:6380/0

# Security Configuration
# Set to true to require API key authentication for all endpoints
REQUIRE_API_KEY=false
# Comma-separated list of valid API keys (generate strong keys for production)
# Example: VALID_API_KEYS=your-secret-api-key-1,your-secret-api-key-2
VALID_API_KEYS=
# Comma-separated list of allowed CORS origins (for web browser requests)
# Example: ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Logging
LOG_LEVEL=INFO
